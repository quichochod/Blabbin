<!--<?xml version="1.0" encoding="utf-8"?>-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whale_list_splash"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/imageButtonSelector"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/button_add_whale"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Create New Whale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/text_add_whale"
        android:layout_alignTop="@+id/imageButtonSelector"
        android:layout_toRightOf="@+id/imageButtonSelector"
        android:layout_toEndOf="@+id/imageButtonSelector"
        android:layout_alignBottom="@+id/imageButtonSelector" />

</RelativeLayout>