<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:weightSum="1"
    android:layout_height="700dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <TextView
        android:text="@string/textview"
        android:layout_width="288dp"
        android:layout_height="80dp"
        android:id="@+id/chooseWhaleTitle"
        android:background="@drawable/blabbintitle"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="177dp">

        <TextView
            android:text="TextView"
            android:layout_width="275dp"
            android:layout_height="175dp"
            android:id="@+id/chooseWhale"
            android:background="@drawable/choosecolor"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale1"
            android:background="@drawable/whale02"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale2"
            android:background="@drawable/whale03"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Whale1"
            android:layout_toEndOf="@+id/Whale1" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale3"
            android:background="@drawable/whale09"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Whale2"
            android:layout_toEndOf="@+id/Whale2" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale6"
            android:background="@drawable/whale16"
            android:layout_below="@+id/Whale2"
            android:layout_alignLeft="@+id/Whale2"
            android:layout_alignStart="@+id/Whale2" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale7"
            android:background="@drawable/whale21"
            android:layout_below="@+id/Whale3"
            android:layout_alignLeft="@+id/Whale3"
            android:layout_alignStart="@+id/Whale3" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale5"
            android:background="@drawable/whale14"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Whale3"
            android:layout_toEndOf="@+id/Whale3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale8"
            android:background="@drawable/whale23"
            android:layout_below="@+id/Whale1"
            android:layout_alignLeft="@+id/Whale1"
            android:layout_alignStart="@+id/Whale1" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale9"
            android:background="@drawable/whale25"
            android:layout_below="@+id/Whale5"
            android:layout_alignLeft="@+id/Whale5"
            android:layout_alignStart="@+id/Whale5" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale10"
            android:background="@drawable/whale27"
            android:layout_below="@+id/Whale8"
            android:layout_alignLeft="@+id/Whale8"
            android:layout_alignStart="@+id/Whale8" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale11"
            android:background="@drawable/whale30"
            android:layout_below="@+id/Whale6"
            android:layout_alignLeft="@+id/Whale6"
            android:layout_alignStart="@+id/Whale6" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale12"
            android:background="@drawable/whale34"
            android:layout_below="@+id/Whale7"
            android:layout_alignLeft="@+id/Whale7"
            android:layout_alignStart="@+id/Whale7" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale13"
            android:background="@drawable/whale37"
            android:layout_below="@+id/Whale9"
            android:layout_alignLeft="@+id/Whale9"
            android:layout_alignStart="@+id/Whale9" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale14"
            android:background="@drawable/whale41"
            android:layout_below="@+id/Whale10"
            android:layout_alignLeft="@+id/Whale10"
            android:layout_alignStart="@+id/Whale10" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale15"
            android:background="@drawable/whale43"
            android:layout_below="@+id/Whale11"
            android:layout_alignLeft="@+id/Whale11"
            android:layout_alignStart="@+id/Whale11" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale16"
            android:background="@drawable/whale45"
            android:layout_below="@+id/Whale13"
            android:layout_alignLeft="@+id/Whale13"
            android:layout_alignStart="@+id/Whale13" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/Whale17"
            android:background="@drawable/whale47"
            android:layout_below="@+id/Whale12"
            android:layout_alignLeft="@+id/Whale12"
            android:layout_alignStart="@+id/Whale12" />
    </RelativeLayout>
</LinearLayout>